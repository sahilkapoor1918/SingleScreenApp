<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/coffee"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shias Cafeteria"
        android:paddingLeft="20dp"
        android:paddingTop="23dp"
        android:fontFamily="cursive"
        android:textColor="#FFFFFF"
        android:textSize="40sp"/>

    <ImageView
        android:id="@+id/coffee_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/coffee_symbol"
        android:layout_alignParentRight="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Come Celebrate Togetherness ..."
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:layout_marginTop="90dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:fontFamily="cursive"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_line"
        android:text="e-mail us at - shias.cafeteria18@gmail.com\ncontact - 7021495437"
        android:textColor="#8D6E63"
        android:textSize="21sp"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="7dp"
        android:textStyle="bold"
        android:fontFamily="cursive"/>

    <TextView
        android:id="@+id/bottom_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coffee is always a good idea !"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"
        android:textSize="24sp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:fontFamily="cursive"
        android:layout_marginBottom="10dp"/>

</RelativeLayout>